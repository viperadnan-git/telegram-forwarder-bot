{
    "name": "telegram-forwarder-bot",
    "description": "Forward Telegram messages between chats using pure Telegram Bot API",
    "main": "src/index.ts",
    "scripts": {
        "dev": "bunx nodemon src/index.ts --delay 3000",
        "build": "bun build src/index.ts --outfile dist/index.js --target node",
        "start": "bun run dist/index.js",
        "prettier": "prettier --write . --ignore-path .gitignore"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/viperadnan-git/telegram-forwarder-bot.git"
    },
    "keywords": [
        "telegram",
        "message",
        "forward",
        "telegram-forwarder",
        "telegram-message-forwarder"
    ],
    "author": "Adnan Ahmad",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/viperadnan-git/telegram-forwarder-bot/issues"
    },
    "homepage": "https://github.com/viperadnan-git/telegram-forwarder-bot#readme",
    "dependencies": {
        "@grammyjs/parse-mode": "^1.11.1",
        "dotenv": "^16.6.1",
        "express": "^4.22.1",
        "grammy": "^1.39.2",
        "ioredis": "^5.9.1",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.25",
        "@types/node": "^20.19.28",
        "nodemon": "^3.1.11",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
